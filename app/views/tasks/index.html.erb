<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Scope</th>
      <th>Category</th>
      <th>Priority</th>
      <th>Importance</th>
      <th>Urgency</th>
      <th>Status</th>
      <th>Due date</th>
      <th>User</th>
      <th>Project</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.scope %></td>
        <td><%= task.category %></td>
        <td><%= task.priority %></td>
        <td><%= task.importance %></td>
        <td><%= task.urgency %></td>
        <td><%= task.status %></td>
        <td><%= task.due_date %></td>
        <td>
          <%= link_to user_path(task.user) do %>
            <%= image_tag task.user.image.square.url, class: "img-icon rounded-circle" if task.user.image.present? %>
          <% end %>
        </td>
        <td>
          <%= link_to task.project.title, project_path(task.project) %>
        </td>
        <% if user_signed_in? %>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Task', new_task_path %>
<% end %>
