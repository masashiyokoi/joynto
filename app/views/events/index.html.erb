<p id="notice"><%= notice %></p>

<h1 class="h3">Events</h1>

<table>
  <thead>
    <tr>
      <th><%= sort_link(@q, :caption) %></th>
      <th><%= sort_link(@q, :project) %></th>
      <th><%= sort_link(@q, :owner_name, 'Owner') %></th>
      <th><%= sort_link(@q, :start_time) %></th>
      <th><%= sort_link(@q, :end_datetime) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.caption %></td>
        <td>
          <%= link_to project_path(event.project) do %>
            <%= image_tag event.project.image.square.url, class: "img-icon rounded-circle" if event.project.image.present? %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(event.owner) do %>
            <%= image_tag event.owner.image.square.url, class: "img-icon rounded-circle" if event.owner.image.present? %>
          <% end %>
        </td>
        <td><%= event.start_time %></td>
        <td><%= event.end_datetime %></td>
        <td><%= link_to 'Show', event %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= month_calendar events: @events do |date, events| %>
  <%= date %>

  <% events.each do |event| %>
    <div>
      <%= event.caption %>
    </div>
  <% end %>
<% end %>

<% if user_signed_in? %>
<%= link_to 'New Event', new_event_path %>
<% end %>
