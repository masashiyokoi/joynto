<p id="notice"><%= notice %></p>

<h1 class="h3">Events</h1>

<table>
  <thead>
    <tr>
      <th>Caption</th>
      <th>Project</th>
      <th>Owner</th>
      <th>Start datetime</th>
      <th>End datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.caption %></td>
        <td>
          <%= link_to project_path(event.project) do %>
            <%= image_tag event.project.image.square.url, class: "img-icon rounded-circle" if event.project.image.present? %>
          <% end %>
        </td>
        <td>
          <%= link_to user_path(event.owner) do %>
            <%= image_tag event.owner.image.square.url, class: "img-icon rounded-circle" if event.owner.image.present? %>
          <% end %>
        </td>
        <td><%= event.start_datetime %></td>
        <td><%= event.end_datetime %></td>
        <td><%= link_to 'Show', event %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Event', new_event_path %>
<% end %>
