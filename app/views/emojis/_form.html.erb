<%= form_with(model: emoji, local: true) do |form| %>
  <% if emoji.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(emoji.errors.count, "error") %> prohibited this emoji from being saved:</h2>

      <ul>
      <% emoji.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= image_tag emoji.image.url, width: "300px" if emoji.image? %>
    <%= form.file_field :image, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :vote_scope %>
    <%= form.text_field :vote_scope %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
