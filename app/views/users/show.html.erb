<%= link_to 'Back', users_path %>
  <h1>
    <%= image_tag @user.image.square.url, class: 'rounded' if @user.image.present? %>
    <%= @user.name %>
  </h1>
  <% if user_signed_in? %>
    <% unless current_user?(@user) %>
      <% if current_user.following? @user %>
        <%= link_to stop_following_user_path(@user), method: :put do %><i class="far fa-minus-square"> stop following</i><% end %>
      <% else %>
        <%= link_to follow_user_path(@user), method: :put do %><i class="far fa-plus-square">follow</i><% end %>
      <% end %>
    <% end %>
  <% end %>
<hr>
<p><%= @user.profile %></p>
<% if @user.messages.is_channel_times.has_image.present? %>
  <% @user.messages.is_channel_times.has_image.limit(6).order(id: :desc).each do |message| %>
    <%= link_to message_path(message) do %><%= image_tag message.image.middle.url, width: '150px' if message.image.present? %><% end %>
  <% end %>
<% end %>

<% if @user.messages.is_channel_times.present? %>
  <hr>
  <%= render 'messages/messages', messages: @user.messages.is_channel_times.order(id: :desc) %>
<% end %>
