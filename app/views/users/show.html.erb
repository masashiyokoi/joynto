<%= link_to 'Back', users_path %>
  <h1>
    <%= image_tag @user.image.square.url, class: 'rounded-circle' if @user.image.present? %>
    <%= @user.name %>
  </h1>
  <% if user_signed_in? %>
    <% unless current_user?(@user) %>
      <% if current_user.following? @user %>
        <%= link_to stop_following_user_path(@user), method: :put do %><i class="far fa-minus-square">stop following</i><% end %>
      <% else %>
        <%= link_to follow_user_path(@user), method: :put do %><i class="far fa-plus-square">follow</i><% end %>
      <% end %>
    <% end %>
  <% end %>
<hr>
<h2 class="h4">Profile</h2>
<p>
<%= @user.profile %>
</p>
<% if @user.followers.present? %>
<h2 class="h4">Follower</h2>
  <% @user.followers.each do |user| %>
    <%= link_to user_path(user) do %>
      <%= image_tag user.image.square.url, class: 'rounded-circle', width: '50px' if user.image.present? %>
    <% end %>
  <% end %>
<% end %>

<% if @user.following_users.present? %>
<h2 class="h4">Following</h2>
  <% @user.following_users.each do |user| %>
    <%= link_to user_path(user) do %>
      <%= image_tag user.image.square.url, class: 'rounded-circle', width: '50px' if user.image.present? %>
    <% end %>
  <% end %>
<% end %>

<% if @user.messages.is_channel_times.has_image.present? %>
<h2 class="h4">images</h2>
  <% @user.messages.is_channel_times.has_image.limit(6).order(id: :desc).each do |message| %>
    <%= link_to message_path(message) do %><%= image_tag message.image.middle.url, width: '150px' if message.image.present? %><% end %>
  <% end %>
<% end %>

<% if @user.messages.is_channel_times.present? %>
<h2 class="h4">messages</h2>
  <% @user.messages.is_channel_times.order(id: :desc).each do |message| %>
    <%= md_to_html(message.content) %>
    <p>
      <%= link_to message do %>
        <%= image_tag message.image.middle.url, width: '33%' if message.image.present? %>
      <% end %>
    </p>
    <p>
      <%= link_to message do %>
        <%= video_tag message.video.url, width: "33%", controls: true, autobuffer: true if message.video.present? %>
      <% end %>
    </p>
    <%= message.created_at %>
  <hr>
  <% end %>
<% end %>
