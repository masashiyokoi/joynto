<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @user.image.url, width: '300px' if @user.image.present? %>
</p>

<p>
  <strong>Profile:</strong>
  <%= @user.profile %>
</p>

<p>
  <strong>Follower:</strong>
  <% @user.followers.each do |user| %>
  <p><%= link_to user.name, user_path(user) %></p>
  <% end %>
</p>

<p>
  <strong>Timelines:</strong>
  <% @user.timelines.each do |timeline| %>
  <p><%= link_to timeline.content, timeline_path(timeline) %></p>
  <% end %>
</p>
<% if user_signed_in? %>
  <%= link_to 'follow', follow_user_path(@user), method: :put %>
  <%= link_to 'stop_following', stop_following_user_path(@user), method: :put %>
  <% if current_user?(@user) %>
  <%= link_to 'Edit', edit_user_path(@user) %>
  <% end %>
<% end %>
<%= link_to 'Back', users_path %>
