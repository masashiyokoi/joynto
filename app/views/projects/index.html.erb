<h1 class="h3">Projects</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= sort_link(@q, :title) %></th>
      <th><%= sort_link(@q, :image) %></th>
      <th><%= sort_link(@q, :start) %></th>
      <th><%= sort_link(@q, :end) %></th>
      <th><%= sort_link(@q, :owner_name, 'Owner') %></th>
      <th><%= sort_link(@q, :stats) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr class="position-relative" style="transform: rotate(0);">
        <td><%= project.title %></td>
        <td><%= image_tag project.image.square_mini.url, class: 'rounded' if project.image.present? %></td>
        <td><%= project.start_datetime.strftime('%Y/%m/%d') %></td>
        <td><%= project.end_datetime.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to user_path(project.owner) do %>
            <%= image_tag project.owner.image.square.url, class: "img-icon rounded-circle" if project.owner.image.present? %>
          <% end %>
        </td>
        <td><%= project.status %></td>
        <td><%= link_to 'show', project, class: 'stretched-link' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Project', new_project_path %>
<% end %>


