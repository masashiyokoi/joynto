<h1 class="h3">Projects</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Image</th>
      <th>Start</th>
      <th>End</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= image_tag project.image.square.url if project.image.present? %></td>
        <td><%= project.start_datetime %></td>
        <td><%= project.end_datetime %></td>
        <td>
          <%= link_to user_path(project.owner) do %>
            <%= image_tag project.owner.image.square.url, class: "img-icon rounded-circle" if project.owner.image.present? %>
          <% end %>
        </td>
        <td><%= link_to 'Show', project %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New Project', new_project_path %>
<% end %>
