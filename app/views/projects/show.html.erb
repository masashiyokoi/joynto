<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @project.title %>
</p>

<p>
  <strong>Image:</strong>
  <%= image_tag @project.image.middle.url, class: 'rounded' if @project.image.present? %>
</p>

<p>
  <strong>Detail:</strong>
  <p>
    <%= md_to_html(@project.detail) %>
  </p>
</p>

<p>
  <strong>Start datetime:</strong>
  <%= @project.start_datetime %>
</p>

<p>
  <strong>End datetime:</strong>
  <%= @project.end_datetime %>
</p>

<p>
  <strong>Owner:</strong>
  <%= link_to user_path(@project.owner) do %>
    <%= image_tag @project.owner.image.square.url, class: "img-icon rounded-circle" if @project.owner.image.present? %>
  <% end %>
</p>

<p>
  <strong>Status:</strong>
  <%= @project.status %>
</p>

<% if user_signed_in? %>
<%= link_to 'Edit', edit_project_path(@project) %> |
<% end %>
<%= link_to 'Back', projects_path %>
