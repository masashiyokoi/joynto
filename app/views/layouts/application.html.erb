<!DOCTYPE html>
<html>
  <head>
    <title>Placck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
        <header>
          <nav>
            <% if user_signed_in? %>
              <strong><%= link_to current_user.name, mypages_show_path %></strong>
              <%= link_to 'プロフィール変更', edit_user_registration_path %>
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete %>
            <% else %>
              <%= link_to 'サインアップ', new_user_registration_path %>
              <%= link_to 'ログイン', new_user_session_path %>
            <% end %>
          </nav>
        </header>
        <% if notice %><p class="notice"><%= notice %></p><% end %>
        <% if alert %><p class="alert"><%= alert %></p><% end %>
      <div class="row">

        <div class="col-md-3 sidebar">
          <nav class="sidebar-nav">
            <div class="sidebar-header">
              <button class="nav-toggler nav-toggler-md sidebar-toggler" type="button" data-toggle="collapse" data-target="#nav-toggleable-md">
                <span class="sr-only">Toggle nav</span>
              </button>
              <a class="sidebar-brand img-responsive" href="/timelines">
                <h1 class="">Placck</h1>
              </a>
            </div>

            <div class="collapse nav-toggleable-md" id="nav-toggleable-md">
              <!-- <form class="sidebar-form">
                <input class="form-control" type="text" placeholder="Search...">
                <button type="submit" class="btn-link">
                  <span class="icon icon-magnifying-glass"></span>
                </button>
              </form> -->
              <ul class="nav nav-pills nav-stacked flex-column">
                <li class="nav-item">
                  <a class="nav-link" href="/timelines">新着情報を確認する（new）</a>
                </li>
                <% if user_signed_in? %>
                <li class="nav-item">
                  <%= link_to 'プロフィール変更', edit_user_registration_path, class: "nav-link" %>
                </li>
                <% end %>
                <li class="nav-header">More</li>
                <li class="nav-item">
                  <a class="nav-link " href="index-light/index.html"><span class="icon icon-thumbs-up"></span>いいねされた人</a>
                </li>
              </ul>
              <hr class="visible-xs mt-3">
            </div>
          </nav>
        </div>

        <div class="col-md-9 content">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
