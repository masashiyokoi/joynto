<% messages.each do |message| %>
<%= link_to message do %>
<div class="row">
  <div class="col-10">
    <%= md_to_html(message.content) %>
    <p>
      <% if message.image? %>
        <% if message.image.file.content_type.include?('image/') %>
          <%= image_tag message.image.url, width: 200 if message.image.present? %>
        <% else %>
          <%= video_tag message.image.url, width: "50%", controls: true, autobuffer: true %>
        <% end %>
      <% end %>
    </p>
  </div>
  <div class="col-2">
    <div class="profile-img-div">
      <%= message.created_at %>

      <%= image_tag message.user.image.url, class: "profile-img" if message.user.image.present? %>
    </div>
  </div>
</div>
<% end %>
<hr>
<% end %>
