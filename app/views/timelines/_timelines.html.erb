<% timelines.each do |timeline| %>
<%= link_to timeline do %>
<div>
  <%= image_tag timeline.user.image.url, width: 50, class: "profile-img" if timeline.user.image.present? %>
  <%= md_to_html(timeline.content) %>
  <p><%= image_tag timeline.image.url, width: 200, class: "profile-img" if timeline.image.present? %></p>
</div>
<% end %>
<hr>
<% end %>
