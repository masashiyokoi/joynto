<%= search_form_for(@q, url:words_path) do |f| %>
<div class="input-group">
  <%= f.text_field :name_or_description_cont, class: "form-control", placeholder: "word or user name" %>
  <span class="input-group-btn">
    <button class="btn btn-default" type="submit">
      <i class="fas fa-search"></i>
    </button>
  </span>
</div>
<% end %>
<hr>
<% if user_signed_in? %>
<%= render 'form', word: @new_word %>
<% end %>
<%= render 'words', words: @words %>
