<% if word.votes_for.up.by_type(User).voters.present? %>
<i class="fas fa-bolt fa-lg" data-toggle="modal" data-target="#exampleModal<%= word.id %>" href="#exampleModal<%= word.id %>" style="cursor: pointer;"></i>
<% end %>
<!-- Modal -->
<div class="modal fade" id="exampleModal<%= word.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">bolt!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% word.votes_for.up.by_type(User).voters.each do |voter| %>
        <%= link_to user_path(voter) do %>
          <p>
            <%= image_tag voter.image.square.url, class: 'rounded-circle', width: '50px' if voter.image.present? %>
            <%= voter.name %>
          </p>
        <% end %>
        <% end %>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
